{% extends 'BlastCoreBundle:CRUD:base_edit.html.twig' %}

{% block form %}
    {{ parent() }}
    
    <div class="js-data" 
         id="organism-form" 
         data-unique-id="{{ form.vars.id }}" 
         data-customer-error="{{ form.customerCode.vars.errors|length ? 'false' : 'true' }}"
         data-supplier-error="{{ form.supplierCode.vars.errors|length ? 'false' : 'true' }}"
    ></div>
{% endblock %}

{% block bottom_js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/librinfocrm/js/organism.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/librinfocrm/js/zipCity.js') }}"></script>
{% endblock %}
