{% spaceless %}
    <div class="mainAddressContainer">
        <blockquote>
            {% if data %}
                <address>
                    <strong>{{ data.firstName }}
                        {{ data.lastName }}</strong><br>
                    {{ data.street }}<br>
                    {{ data.postCode }}
                    {{ data.city }}
                    ({{ data.countryCode }})
                </address>
            {% endif %}
        </blockquote>

        {% if data %}

            <a href="#" data-gototab="form_tab_contactInformations" class="btn btn-success btn-sm sonata-ba-action">
                <i class="fa fa-edit"></i>&nbsp;
                {{ 'sil.crm.organism.form.action.manage'|trans }}
            </a>

        {% else %}

            <div class="mainAddressFormHolder">

                <a
                    href="{{ sonata_admin.field_description.associationadmin.generateUrl(
                    'create',
                    sonata_admin.field_description.getOption('link_parameters', {})
                ) }}"
                    class="btn btn-success btn-sm sonata-ba-action"
                    title="{{ 'sil.crm.organism.form.action.add'|trans }}">
                    <i class="fa fa-plus"></i>&nbsp;
                    {{ 'sil.crm.organism.form.action.add'|trans }}
                </a>

            </div>

            {% include 'SilCRMBundle:Form/Script:main_address_or_phone_script.html.twig' with {'type':'address'} %}

        {% endif %}

    </div>
{% endspaceless %}
